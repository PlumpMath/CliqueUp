<div id="addEventModal" class="modal hide fade" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
        <h3 id="myModalLabel">Add Event</h3>
    </div>
    <div class="modal-body">
        <form id="addEventForm" class="form-horizontal" method="post"> 
            <fieldset>
    </div>

    <div style="padding: 10px;">
        <!-- Form Name -->
        <legend>Add Event</legend>

        <!-- Text input-->
        <div class="control-group">
            <label class="control-label" for="evName">Event Name</label>
            <div class="controls">
                <input id="evName" name="evName" placeholder="My Event" class="input-xlarge" required="" type="text">
                <p class="help-block">The name of your event</p>
            </div>
        </div>

        <!-- Text input-->
        <div class="control-group">
            <label class="control-label" for="descIn">Event Description</label>
            <div class="controls">
                <input id="descIn" name="descIn" placeholder="My event is...." class="input-xlarge" required="" type="text">
                <p class="help-block">Tell us a little about your event</p>
            </div>
        </div>


        <!-- Text input-->
        <div class="control-group">
            <label class="control-label" for="evLoc">Location</label>
            <div class="controls">
                <input id="evLoc" name="evLoc" placeholder="My Location" class="input-xlarge" required="" type="text">
                <p class="help-block">The location of your event</p>
            </div>
        </div>

        <!-- Text input-->
        <div class="control-group">
            <label class="control-label" for="pocIn">Point of Contact</label>
            <div class="controls">
                <input id="pocIn" name="pocIn" placeholder="me@myDomain.com" class="input-xlarge" required="" type="text">
                <p class="help-block">A contact email address for interested parties</p>
            </div>
        </div>

        </fieldset>
</form>
    </div>
    <div class="modal-footer">
        <button class="btn" data-dismiss="modal" aria-hidden="true">Close</button>
        <button id="saveEventBtn" class="btn btn-primary">Save changes</button>
    </div>
</div>
</div>